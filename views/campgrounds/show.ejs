<% layout('layouts/boilerplate') %>


<div class="row">
<div class="col-6">
    <div class="card" style="width: auto">
        <img class="card-img-top" src="<%=campground.image%>" alt="Campground Picture">
        <div class="card-body">
          <h5 class="card-title"><%=campground.title%></h5>
          <p class="card-text"><%=campground.description%></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%=campground.location%></li>
          <li class="list-group-item">Price: <%=campground.price%>$ per night</li>
        </ul>
        <div class="card-body" style="width: auto">
          <div class="mx-auto">
            <a href="/campgrounds" class="card-link btn btn-info" >SHOW ALL</a>
            <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-danger">EDIT</a>
            <form class="d-inline " action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">  
              <button class="btn btn-warning">Delete Campground</button>
          </form>
          </div>


        </div>
      </div>

    </div>

    <div class="col-6">
      <h2>Leave a review</h2>
      <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
        <div class="mb-3">
          <label for="form-label">Rating</label>
          <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="review">
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4" required></textarea>
          <div class="valid-feedback">
            a może papież?!!
            <img src="https://custom-gwent.com/cardsBg/65fced9dd26cde0ff454206b8665eac7.jpeg" alt="">
            https://custom-gwent.com/cardsBg/65fced9dd26cde0ff454206b8665eac7.jpeg
        </div>
        </div>
        <button class="btn btn-success">sumbit</button>
      </form>
      <% for (let review of campground.reviews) { %>
      <div class="card mb-3">
      <div class="mb-3 card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <p class="card-text">Review: <%= review.body %></p>
        <form class="d-inline " action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">  
          <button class="btn btn-sm btn-danger">Delete Review</button>
      </form>
      </div>
    </div>
      <% } %>

    </div>
    </div>
